<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/left_padding"
    android:paddingEnd="@dimen/left_padding"
    android:paddingTop="@dimen/top_padding"
    android:columnCount="2"
    android:rowCount="2"
    android:orientation="horizontal"
>
    <TextView
        android:text="@string/app_description"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
    />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/left_padding"
        android:paddingEnd="@dimen/left_padding"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnWeight=".5"
        >
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Permissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:layout_marginBottom="@dimen/bottom_margin" />
        <TextView
            android:id="@+id/notification_access_permission_text_view"
            android:textAppearance="?android:attr/textAppearance"
            android:text="Notification Access:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:layout_marginBottom="@dimen/bottom_margin" />
        <TextView
            android:id="@+id/usage_access_permission_text_view"
            android:textAppearance="?android:attr/textAppearance"
            android:text="Usage Access: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:layout_marginBottom="@dimen/bottom_margin" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/left_padding"
        android:paddingEnd="@dimen/left_padding"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight=".5"
        >
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Configuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:layout_marginBottom="@dimen/bottom_margin" />
        <TextView
            android:id="@+id/host_ip_text_view"
            android:textAppearance="?android:attr/textAppearance"
            android:text="RTI Processor IP:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:layout_marginBottom="@dimen/bottom_margin" />
        <TextView
            android:id="@+id/host_port_text_view"
            android:textAppearance="?android:attr/textAppearance"
            android:text="RTI Processor Port:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:layout_marginBottom="@dimen/bottom_margin" />
        <TextView
            android:id="@+id/device_index_text_view"
            android:textAppearance="?android:attr/textAppearance"
            android:text="Device Index:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:layout_marginBottom="@dimen/bottom_margin" />
    </LinearLayout>
</GridLayout>

